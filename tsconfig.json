{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts", "src/**/*.d.ts", "src/components/*.vue", "sandbox/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}
